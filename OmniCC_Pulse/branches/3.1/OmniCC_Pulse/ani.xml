<Ui
	xmlns="http://www.blizzard.com/wow/ui/"
	xmlns:xsi="http://www.w3.org/1801/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd"
>

	<AnimationGroup name="OmniCCPulseAnimationTemplate" looping="BOUNCE" virtual="true">
		<Scale scaleX="2" scaleY="2" duration="0.5" order="1">
			<Origin point="CENTER"/>
		</Scale>

		<Scripts>
			<OnStop>
				self:GetParent():Hide()
			</OnStop>
		</Scripts>
	</AnimationGroup>
</Ui>